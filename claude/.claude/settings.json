      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "Bash(*)",
      "Write(~/.claude/plans/**)",
      "Edit(~/.claude/plans/**)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Read(**/.env*)",
      "Edit(**/.env*)",
      "Write(**/.env*)",
      "Bash(cat *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(sed *)",
      "Bash(awk *)",
      "Bash(xargs *)",
      "Bash(python3 -c *)",
      "Bash(python -c *)",
      "Bash(*| python3 -c *)",
      "Bash(*| python -c *)",
      "Bash(*rm -rf *)",
      "Bash(*rm -r *)",
      "Bash(*chown *)",
      "Bash(*kill *)",
      "Bash(*killall *)",
      "Bash(*pkill *)",
      "Bash(*launchctl *)",
      "Bash(*docker run --privileged *)",
      "Bash(*docker run -v /:/host *)",
      "Bash(*docker run -v /var/run/docker.sock:*)",
      "Bash(*npm publish *)",
      "Bash(*npm unpublish *)",
      "Bash(*gh repo delete *)",
      "Bash(*sudo *)",
      "Bash(*wget *)",
      "Bash(*echo *>*)",
      "Bash(*printf *>*)",
      "Bash(*aws * delete*)",
      "Bash(*aws * put*)",
      "Bash(*aws * create*)",
      "Bash(*aws * update*)",
      "Bash(*aws * terminate*)",
      "Bash(*aws * remove*)",
      "Bash(*aws * modify*)",
      "Bash(*aws * start*)",
      "Bash(*aws * stop*)",
      "Bash(*aws * invoke*)",
      "Bash(*aws s3 rm*)",
      "Bash(*aws s3 cp*)",
      "Bash(*aws s3 mv*)",
      "Bash(*aws s3 sync*)",
      "Bash(*cdk deploy*)",
      "Bash(*cdk destroy*)",
      "Bash(*cdk bootstrap*)",
      "Bash(*npx cdk*)",
      "Bash(*terraform apply*)",
      "Bash(*terraform destroy*)",
      "Bash(*npm run deploy*)",
      "Bash(*npm run destroy*)",
      "Bash(*serverless deploy*)",
      "Bash(*sls deploy*)",
      "Bash(*serverless remove*)",
      "Bash(*sls remove*)",
      "Bash(*helm install*)",
      "Bash(*helm upgrade*)",
      "Bash(*helm delete*)",
      "Bash(*helm uninstall*)",
      "Bash(*helm rollback*)",
      "Bash(*kubectl apply*)",
      "Bash(*kubectl delete*)",
      "Bash(*kubectl create*)",
      "Bash(*kubectl replace*)",
      "Bash(*kubectl patch*)",
