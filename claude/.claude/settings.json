      "Bash(*xargs*rm -rf*)",
      "Bash(*xargs*chmod*)",
      "Bash(*xargs*chown*)",
      "Edit(~/.claude/CLAUDE.md)",
      "Edit(~/.claude/settings.json)",
      "Edit(~/.claude/skills/**)",
      "Edit(~/.claude/commands/**)",
      "Edit(~/.claude/hooks/**)",
