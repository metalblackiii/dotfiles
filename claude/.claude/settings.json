{
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "Bash(mkdir *)",
      "Bash(npm *)",
      "Bash(npm run *)",
      "Bash(node *)",
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(kubectl get *)",
      "Bash(kubectl describe *)",
      "Bash(kubectl logs *)",
      "Bash(kubectl config *)",
      "Bash(kubectl port-forward *)",
      "Bash(kubectl exec *)",
      "Bash(pwd)",
      "Bash(npx *)",
      "Bash(touch *)",
      "Bash(*npm test*)",
      "Bash(docker *)",
      "Bash(docker compose *)",
      "Bash(jq *)",
      "Bash(python3 *)",
      "Write(~/.claude/plans/**)",
      "Edit(~/.claude/plans/**)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:localhost)",
      "WebFetch(domain:127.0.0.1)",
      "WebFetch(domain:npmjs.com)",
      "WebFetch(domain:docs.docker.com)",
      "WebFetch(domain:kubernetes.io)",
      "WebSearch"
    ],
    "deny": [
      "Read(**/.env*)",
      "Edit(**/.env*)",
      "Write(**/.env*)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(xargs *)",
      "Bash(rm -rf *)",
      "Bash(docker run --privileged *)",
      "Bash(docker run -v /:/host *)",
      "Bash(docker run -v /var/run/docker.sock:*)",
      "Bash(npm publish *)",
      "Bash(npm unpublish *)",
      "Bash(gh repo delete *)",
      "Bash(sudo *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Read(**/secrets/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(~/.aws/**)",
      "Read(~/.ssh/**)",
      "Read(~/.zshrc)",
      "Read(~/.bashrc)",
      "Read(~/.bash_profile)",
      "Read(~/.gitconfig)",
      "Edit(~/.zshrc)",
      "Edit(~/.bashrc)",
      "Edit(~/.bash_profile)",
      "Edit(~/.gitconfig)",
      "Bash(git reset --hard *)",
      "Bash(git reset --hard)",
      "Bash(git clean -f *)",
      "Bash(git clean -fd *)",
      "Bash(git push --force *)",
      "Bash(git push -f *)",
      "Bash(git branch -D *)",
      "Bash(*xargs*rm *)",
      "Bash(*xargs*rm -rf*)",
      "Bash(*xargs*chmod*)",
      "Bash(*xargs*chown*)",
      "Edit(~/.claude/CLAUDE.md)",
      "Edit(~/.claude/settings.json)",
      "Edit(~/.claude/skills/**)",
      "Edit(~/.claude/commands/**)",
      "Edit(~/.claude/hooks/**)",
      "Edit(~/.claude/rules/**)",
      "Write(~/.claude/CLAUDE.md)",
      "Write(~/.claude/settings.json)",
      "Write(~/.claude/skills/**)",
      "Write(~/.claude/commands/**)",
      "Write(~/.claude/hooks/**)",
      "Write(~/.claude/rules/**)"
    ],
    "ask": [
      "Bash(git commit *)",
      "Bash(git commit)",
      "Bash(git push *)",
      "Bash(git push)",
      "Bash(git stash drop *)",
      "Bash(gh pr create *)",
      "Bash(gh pr merge *)",
      "Bash(gh pr close *)",
      "Bash(gh issue close *)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/session-start.sh"
          }
        ]
      }
    ]
  },
  "autoUpdatesChannel": "stable",
  "minimumVersion": "2.1.39"
}
