      "Bash(*kubectl taint*)",
      "Read(**/secrets/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(~/.aws/**)",
      "Read(~/.ssh/**)",
      "Read(~/.zshrc)",
      "Read(~/.bashrc)",
      "Read(~/.bash_profile)",
      "Read(~/.gitconfig)",
      "Edit(~/.zshrc)",
      "Edit(~/.bashrc)",
      "Edit(~/.bash_profile)",
      "Edit(~/.gitconfig)",
      "Bash(*git reset --hard *)",
      "Bash(*git reset --hard)",
      "Bash(*git clean -f *)",
      "Bash(*git clean -fd *)",
      "Bash(*git push --force *)",
      "Bash(*git push -f *)",
      "Bash(*git checkout -- *)",
      "Bash(*git branch -D *)",
