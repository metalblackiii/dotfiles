{
  "env": {
    "ENABLE_TOOL_SEARCH": "true"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "Bash(mkdir *)",
      "Bash(npm *)",
      "Bash(npm run *)",
      "Bash(node *)",
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(kubectl get *)",
      "Bash(kubectl describe *)",
      "Bash(kubectl logs *)",
      "Bash(kubectl config *)",
      "Bash(kubectl port-forward *)",
      "Bash(pwd)",
      "Bash(basename *)",
      "Bash(npx *)",
      "Bash(touch *)",
      "Bash(*npm test*)",
      "Bash(docker *)",
      "Bash(docker compose *)",
      "Bash(ast-grep *)",
      "Bash(jq *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(test *)",
      "Write(~/.claude/plans/**)",
      "Edit(~/.claude/plans/**)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Read(**/.env*)",
      "Edit(**/.env*)",
      "Write(**/.env*)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(rg *)",
      "Bash(sed *)",
      "Bash(awk *)",
      "Bash(xargs *)",
      "Bash(python3 -c *)",
      "Bash(python -c *)",
      "Bash(*| python3 -c *)",
      "Bash(*| python -c *)",
      "Bash(*rm -rf *)",
      "Bash(*rm -r *)",
      "Bash(*docker run --privileged *)",
      "Bash(*docker run -v /:/host *)",
      "Bash(*docker run -v /var/run/docker.sock:*)",
      "Bash(*npm publish *)",
      "Bash(*npm unpublish *)",
      "Bash(*gh repo delete *)",
      "Bash(*sudo *)",
      "Bash(*curl *)",
      "Bash(*wget *)",
      "Bash(*echo *>*)",
      "Bash(*printf *>*)",
      "Read(**/secrets/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(~/.aws/**)",
      "Read(~/.ssh/**)",
      "Read(~/.zshrc)",
      "Read(~/.bashrc)",
      "Read(~/.bash_profile)",
      "Read(~/.gitconfig)",
      "Edit(~/.zshrc)",
      "Edit(~/.bashrc)",
      "Edit(~/.bash_profile)",
      "Edit(~/.gitconfig)",
      "Bash(*git reset --hard *)",
      "Bash(*git reset --hard)",
      "Bash(*git clean -f *)",
      "Bash(*git clean -fd *)",
      "Bash(*git push --force *)",
      "Bash(*git push -f *)",
      "Bash(*git checkout -- *)",
      "Bash(*git branch -D *)",
      "Bash(*xargs*rm *)",
      "Bash(*xargs*rm -rf*)",
      "Bash(*xargs*chmod*)",
      "Bash(*xargs*chown*)",
      "Edit(~/.claude/CLAUDE.md)",
      "Edit(~/.claude/settings.json)",
      "Edit(~/.claude/skills/**)",
      "Edit(~/.claude/commands/**)",
      "Edit(~/.claude/hooks/**)",
      "Write(~/.claude/CLAUDE.md)",
      "Write(~/.claude/settings.json)",
      "Write(~/.claude/skills/**)",
      "Write(~/.claude/commands/**)",
      "Write(~/.claude/hooks/**)",
      "Edit(~/.claude/scripts/**)",
      "Edit(~/.claude/agents/**)",
      "Write(~/.claude/scripts/**)",
      "Write(~/.claude/agents/**)"
    ],
    "ask": [
      "Bash(git commit *)",
      "Bash(git commit)",
      "Bash(git push *)",
      "Bash(git push)",
      "Bash(git stash drop *)",
      "Bash(gh pr create *)",
      "Bash(gh pr merge *)",
      "Bash(gh pr close *)",
      "Bash(gh issue close *)",
      "Bash(git restore *)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/session-start.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/scripts/context-bar.sh"
  },
  "autoUpdatesChannel": "stable",
  "effortLevel": "medium"
}
